@page
@model Website.Pages.ProductManagementModel
@{
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

        .form-container h3 {
            text-align: center;
            margin-bottom: 20px;
        }

    .btn-primary {
        width: 100%;
    }

    .top-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        margin-bottom: 20px;
    }

        .top-buttons .btn {
            flex: 1;
            margin: 0 5px;
        }

    .sidebar {
        background-color: #343a40;
        min-height: 100vh;
        color: white;
        padding-top: 20px;
    }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
            border-radius: 5px;
        }

            .sidebar a:hover {
                background-color: #495057;
            }
</style>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h4 class="text-center">Admin Dashboard</h4>
                <a href="DashboardAdmin" class="mt-3">Dashboard</a>
                <a href="ProductManagement">Product Management</a>
                <a href="#">Orders</a>
                <a href="#">Users</a>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <!-- Top Buttons -->
                <div class="top-buttons">
                    <a href="ProductManagement" class="btn btn-outline-primary">Add Product</a>
                    <a href="UpdateProduct" class="btn btn-outline-success">Update Product</a>
                    <a href="DeleteProduct" class="btn btn-outline-warning">Delete Product</a>
                    <a href="ProductInfo" class="btn btn-outline-danger">View Product</a>
                </div>

                <!-- Form -->
                <div class="form-container">
                    <h3>Add Product</h3>
                    <form method="post" enctype="multipart/form-data" asp-page="/ProductManagement">
                        <!-- Product Name -->
                        <div class="mb-3">
                            <label for="productName" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="productName" name="ProductName" required>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label for="categoryId" class="form-label">Category</label>
                            <select class="form-select" id="categoryId" name="CategoryId" required>
                                <option value="">Select Category</option>
                                <option value="1">Category 1</option>
                                <option value="2">Category 2</option>
                                <option value="3">Category 3</option>
                            </select>
                        </div>

                        <!-- Size -->
                        <div class="mb-3">
                            <label for="sizeId" class="form-label">Size</label>
                            <select class="form-select" id="sizeId" name="SizeId" required>
                                <option value="">Select Size</option>
                                <option value="1">Small</option>
                                <option value="2">Medium</option>
                                <option value="3">Large</option>
                            </select>
                        </div>

                        <!-- Brand -->
                        <div class="mb-3">
                            <label for="brandId" class="form-label">Brand</label>
                            <select class="form-select" id="brandId" name="BrandId" required>
                                <option value="">Select Brand</option>
                                <option value="1">Brand 1</option>
                                <option value="2">Brand 2</option>
                                <option value="3">Brand 3</option>
                            </select>
                        </div>

                        <!-- Product Quantity -->
                        <div class="mb-3">
                            <label for="productQuantity" class="form-label">Product Quantity</label>
                            <input type="number" class="form-control" id="productQuantity" name="ProductQuantity" required>
                        </div>

                        <!-- Latest Price -->
                        <div class="mb-3">
                            <label for="latestPrice" class="form-label">Latest Price</label>
                            <input type="text" class="form-control" id="latestPrice" name="LatestPrice" required>
                        </div>
                        <div class="mb-3">
                            <label for="productImage" class="form-label">Product Image</label>
                            <input type="file" class="form-control" id="productImage" name="ProductImage" accept="image/*" required>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
