@page
@model Website.Pages.DashboardAdminModel
@{
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .sidebar {
        background-color: #343a40;
        min-height: 100vh;
        color: white;
        padding-top: 20px;
    }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
            border-radius: 5px;
        }

            .sidebar a:hover {
                background-color: #495057;
            }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .card h5 {
            font-size: 1.5rem;
            margin: 0;
        }

    .recent-activity, .sales-overview {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background: white;
        padding: 20px;
    }

    .chart-container {
        height: 250px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
            <h4 class="text-center">Admin Dashboard</h4>
            <a href="#" class="mt-3">Dashboard</a>
            <a href="#">Product Management</a>
            <a href="#">Orders</a>
            <a href="#">Users</a>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 p-4">
            <div class="row g-3">
                <!-- Stats Cards -->
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h5>Total Orders</h5>
                            <p class="display-6">1,234</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h5>Pending Orders</h5>
                            <p class="display-6">124</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h5>Total Revenue</h5>
                            <p class="display-6">$12,345</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h5>Total Users</h5>
                            <p class="display-6">567</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity and Sales Overview -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="recent-activity">
                        <h5>Recent Activity</h5>
                        <table class="table table-borderless mt-3">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Activity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-12-25</td>
                                    <td>New Order Placed</td>
                                </tr>
                                <tr>
                                    <td>2024-12-24</td>
                                    <td>User Registered</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="sales-overview">
                        <h5>Sales Overview</h5>
                        <canvas id="salesChart" class="chart-container"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sales Chart
    const ctx = document.getElementById('salesChart').getContext('2d');
    const salesChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May'],
            datasets: [{
                label: 'Sales',
                data: [100, 200, 150, 300, 400],
                borderColor: '#007bff',
                tension: 0.3,
                fill: false,
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                x: { grid: { display: false } },
                y: { grid: { color: '#e9ecef' } }
            }
        }
    });
</script>